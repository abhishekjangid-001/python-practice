from tkinter import *

root = Tk()
root.title("Registration Form")
root.geometry("588x300")

# Heading
Label(root, text="Python Registration Form", font="Arial 15 bold").grid(row=0, column=3)

# Labels
Label(root, text="Name").grid(row=1, column=2)
Label(root, text="Phone").grid(row=2, column=2)
Label(root, text="Gender").grid(row=3, column=2)
Label(root, text="Emergency").grid(row=4, column=2)
Label(root, text="Payment Mode").grid(row=5, column=2)

# Variables
namevalue = StringVar()
phonevalue = StringVar()
gendervalue = StringVar()
emergencyvalue = StringVar()
paymentmodevalue = StringVar()
checkvalue = IntVar()

# Entry Fields
Entry(root, textvariable=namevalue).grid(row=1, column=3)
Entry(root, textvariable=phonevalue).grid(row=2, column=3)
Entry(root, textvariable=gendervalue).grid(row=3, column=3)
Entry(root, textvariable=emergencyvalue).grid(row=4, column=3)
Entry(root, textvariable=paymentmodevalue).grid(row=5, column=3)

# Checkbox
Checkbutton(root, text="Remember me?", variable=checkvalue).grid(row=6, column=3)

# Submit Function
def submit():
    print("Name:", namevalue.get())
    print("Phone:", phonevalue.get())
    print("Gender:", gendervalue.get())
    print("Emergency:", emergencyvalue.get())
    print("Payment Mode:", paymentmodevalue.get())
    print("Remember:", checkvalue.get())

# Submit Button
Button(root, text="Submit", command=submit).grid(row=7, column=3)

root.mainloop()
